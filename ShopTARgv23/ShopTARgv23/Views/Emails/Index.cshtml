@model ShopTARgv23.Models.Emails.EmailsViewModel

<div>
    <form method="post" enctype="multipart/form-data">

        <div class="form-group row">
            <label asp-for="To" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <input asp-for="To" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Subject" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <input asp-for="Subject" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Body" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <textarea rows="5" asp-for="Body" class="form-control"></textarea>
            </div>
        </div>

        <div>
            <div class="col-sm-10">
                <label asp-for="Attachment"></label>
                <input asp-for="Attachment" class="form-control" multiple="multiple" type="file"></input>
            </div>
        </div>

        <input asp-action="sendEmail" asp-controller="emails" type="submit" class="btn btn-primary" value="Send Email" />

    </form>
</div>