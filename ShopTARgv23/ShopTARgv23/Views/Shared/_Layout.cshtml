<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="ShopTARgv23" />
    <meta name="author" content="ShopTARgv23" />
    <title>@ViewData["Title"] - ShopTARgv23</title>

    <!-- Иконка сайта -->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />

    <!-- Подключение Font Awesome -->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <!-- Подключение Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700|Open+Sans:300,400,600,700" rel="stylesheet" />

    <!-- Подключение Bootstrap и стилей Clean Blog -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/styles.css" rel="stylesheet" />
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- Навигация -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top" id="mainNav">
        <div class="container px-4 px-lg-5">
            <!-- Логотип -->
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">ShopTARgv23</a>
            <!-- Кнопка для мобильного меню -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <!-- Линки навигации слева -->
                <ul class="navbar-nav me-auto py-4 py-lg-0">
                    <li class="nav-item">
                        <a class="nav-link fw-bold px-lg-3 py-3 py-lg-4" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold px-lg-3 py-3 py-lg-4" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Показываем только для залогиненных пользователей -->
                        <li class="nav-item">
                            <a class="nav-link fw-bold px-lg-3 py-3 py-lg-4" asp-area="" asp-controller="Spaceships" asp-action="Index">Spaceship</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold px-lg-3 py-3 py-lg-4" asp-area="" asp-controller="RealEstates" asp-action="Index">Real Estates</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold px-lg-3 py-3 py-lg-4" asp-area="" asp-controller="Kindergartens" asp-action="Index">Kindergartens</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold px-lg-3 py-3 py-lg-4" asp-area="" asp-controller="AccuWeathers" asp-action="Index">Accu Weather</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold px-lg-3 py-3 py-lg-4" asp-area="" asp-controller="ChuckNorris" asp-action="Index">Chuck Norris</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold px-lg-3 py-3 py-lg-4" asp-area="" asp-controller="FreeGames" asp-action="Index">FreeGames</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold px-lg-3 py-3 py-lg-4" asp-area="" asp-controller="Cocktails" asp-action="Index">Cocktails</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold px-lg-3 py-3 py-lg-4" asp-area="" asp-controller="Emails" asp-action="Index">Emails</a>
                        </li>

                    }
                </ul>
                <!-- Элементы аутентификации справа -->
                <ul class="navbar-nav ms-auto py-4 py-lg-0">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (ViewBag.UserFirstName != null)
                        {
                            <li class="nav-item dropdown">
                                <div class="dropdown">
                                    <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                        Manage Account
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <li><a class="dropdown-item" asp-controller="Accounts" asp-action="ChangePassword">Change Password</a></li>
                                    </ul>
                                </div>
                            </li>

                                                


                            <li class="nav-item">
                            <span class="navbar-text fw-bold px-lg-3 py-3 py-lg-4">Welcome, @ViewBag.UserFirstName!</span>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <div class="dropdown">
                                    <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                        Manage Account
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <li><a class="dropdown-item" asp-controller="Accounts" asp-action="ChangePassword">Change Password</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                            <span class="navbar-text fw-bold px-lg-3 py-3 py-lg-4">Welcome, @User.Identity.Name!</span>
                            </li>
                        }

                        <!-- Отображение имени пользователя -->



                        <li class="nav-item">
                            <form asp-area="" asp-controller="Accounts" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link nav-link text-dark px-lg-3 py-3 py-lg-4">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark px-lg-3 py-3 py-lg-4" asp-area="" asp-controller="Accounts" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark px-lg-3 py-3 py-lg-4" asp-area="" asp-controller="Accounts" asp-action="Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>


    <!-- Шапка страницы -->
    <header class="masthead" style="background-image: url('assets/img/1671.jpg')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>ShopTARgv23</h1>
                        <span class="subheading fw-bold">TARgv23 - Vitalii Sokhan</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Основной контент -->
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="mt-4">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <!-- Футер -->
    <footer class="border-top mt-auto">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="mt-4 col-md-10 col-lg-8 col-xl-7">
                    <ul class="list-inline text-center">
                        <li class="list-inline-item">
                            <a href="#!"><span class="fa-stack fa-lg"><i class="fas fa-circle fa-stack-2x"></i><i class="fab fa-twitter fa-stack-1x fa-inverse"></i></span></a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#!"><span class="fa-stack fa-lg"><i class="fas fa-circle fa-stack-2x"></i><i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i></span></a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#!"><span class="fa-stack fa-lg"><i class="fas fa-circle fa-stack-2x"></i><i class="fab fa-github fa-stack-1x fa-inverse"></i></span></a>
                        </li>
                    </ul>
                    <div class="small text-center text-muted fst-italic">&copy; 2024 - ShopTARgv23</div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Подключение Bootstrap и скриптов -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
