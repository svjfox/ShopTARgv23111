<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopTARgv23</title>

    <!-- Custom and Template Styles -->
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <!-- Header -->
    <header id="header" class="alt">
        <div class="logo">
            <a asp-area="" asp-controller="Home" asp-action="Index">ShopTARgv23 <span>Home</span></a>
        </div>
        <a href="#menu">Menu</a>
    </header>


    <nav id="menu">
        > <!-- Кнопка для закрытия меню -->
        <ul class="links">
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
            <li><a asp-area="" asp-controller="Spaceships" asp-action="Index">Spaceship</a></li>
            <li><a asp-area="" asp-controller="RealEstates" asp-action="Index">Real Estates</a></li>
            <li><a asp-area="" asp-controller="Kindergarten" asp-action="Index">Kindergartens</a></li>
        </ul>
    </nav>

    <!-- Banner Slider with Background Images -->
    <section class="banner full">
        <article>
            <img src="~/images/slide01.jpg" alt="Slide 1" />
            <div class="inner">
                <header>
                    <p>Бесплатный шаблон для сайта</p>
                    <h2>ShopTARgv23</h2>
                </header>
            </div>
        </article>
        <article>
            <img src="~/images/slide02.jpg" alt="Slide 2" />
            <div class="inner">
                <header>
                    <p>Стильный и современный дизайн</p>
                    <h2>Kindergarten</h2>
                </header>
            </div>
        </article>
        <article>
            <img src="~/images/slide03.jpg" alt="Slide 3" />
            <div class="inner">
                <header>
                    <p>Простота и удобство</p>
                    <h2>Для всех пользователей</h2>
                </header>
            </div>
        </article>
    </section>

    <!-- Main Content Wrapper with Template Style -->
    <section id="main-content">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody() <!-- Основное содержимое дочерних представлений -->
            </main>
        </div>
    </section>

    <!-- Footer -->
    <footer id="footer">
        <div class="container text-center">
            <p>&copy; 2024 - ShopTARgv23</p>
            <ul class="icons">
                <li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
                <li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
                <li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
                <li><a href="#" class="icon fa-envelope-o"><span class="label">Email</span></a></li>
            </ul>
        </div>
    </footer>

    <!-- Template Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
