@model ShopTARgv23.Models.RealEstates.RealEstateCreateUpdateViewModel

@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}


<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedAt" type="hidden" />
        <input asp-for="ModifiedAt" type="hidden" />

        <div class="form-group
            row">
            <label asp-for="Location" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Location" class="form-control" />
            </div>
            </div>

            <div class="form-group row">
                <label asp-for="Size" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Size" class="form-control" />
                </div>

                </div>

                <div class="form-group
                    row">
                    <label asp-for="RoomNumber" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="RoomNumber" class="form-control" />
                    </div>
                    </div>

                    <div class="form-group

                        row">
                        <label asp-for="BuildingType" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="BuildingType" class="form-control" />
                        </div>
                        </div>

                        <div class="form-group
                            row">
                            <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Price" class="form-control" />
                            </div>
                            </div>

                            <div class="form-group
                                row">
                                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Description" class="form-control" />
                                </div>
                                </div>

                                <div class="form-group
                                    row">
                                    <label asp-for="Image" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="Image" class="form-control" />
                                    </div>
                                 </div>

                                 @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                 {
                                     <p class="text-danger">@error.ErrorMessage</p>
                                 }
                                 @if (Model.Id.HasValue)
                                 {
                                     <button type="submit" class="btn btn-primary">Update</button>
                                 }
                                 else
                                 {
                                     <button type="submit" class="btn btn-primary">Create</button>
                                 }

                                 <a asp-action="index" asp-controller="realEstates" type="submit" class="btn btn-primary">Back</a>
        masterTest
    </form>
        </div>

        @section Scripts
        {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on('change', function () {
                        var fileName = $(this).val().split('\\').pop();
                        $(this).next('.custom-file-label').addClass("selected").html(fileName);
                    });
                });
            </script>
        }



           

